{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "sourceRoot": "./src",
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "**/*.spec.*",
    "jest.config.ts",
    "tests"
  ],
  "include": [
    "./LICENSE",
    "./package.json",
    "./README.md",
    "src"
  ]
}
